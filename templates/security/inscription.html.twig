{% extends 'base.html.twig' %}

{% block title %}

	INSCRIPTION

{% endblock %}


{% block body %}
	<h1 class="display-4 text-center my-5">
		Formulaire d'inscription
	</h1>



	{{ form_start(formInscription, {'attr': {'class': 'col-md-4 mx-auto'} }) }}


	{{ form_row(formInscription.nom, {'label': 'Nom d\'utilisateur'} ) }}

   {{ form_row(formInscription.prenom, {'label' : 'Prenom d\'Utilisateur' }) }}

	{{ form_row(formInscription.telephone, {'label': 'telephone'} ) }}

	{{ form_row(formInscription.adresse, {'label': 'adresse'} ) }}

	{{ form_row(formInscription.code_postal, {'label': 'Code postal' } ) }}

	{{ form_row(formInscription.ville, {'label': 'Ville'}) }}

	{{ form_row(formInscription.email, {'label': 'email utilisateur'} ) }}

	{{ form_row(formInscription.password, {'label': 'Mot de passe'}) }}

	{{ form_row(formInscription.confirm_password, {'label': "Confirmation du mot de passe"} ) }}

	<button type="submit" class="btn btn-secondary">S'inscrire</button>

	{{ form_end(formInscription) }}

{% endblock %}
